{
  "name": "custom-typescript-electron-template",
  "version": "1.0.0",
  "main": "./dist/main/src/main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clear": "rimraf [\"./dist\"]",
    
    "compile-main": "tsc --build \"./proj/main/tsconfig.json\"",
    "compile-renderer": "webpack -c \"./proj/renderer/webpack.config.js\"",
    "copy-assets": "copyfiles -u 2 \"./proj/assets/**/*\" out \"./dist/assets\"",
    "compile": "yarn run clear && yarn run compile-main && yarn run compile-renderer && yarn run copy-assets",
    
    "start": "yarn run compile && cross-env DEBUG=true electron ."
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "typescript": "^4.5.4",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "cross-env": "^7.0.3",
    "electron": "^16.0.6",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "html-webpack-plugin": "^5.5.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6"
  },
  "dependencies": {}
}
